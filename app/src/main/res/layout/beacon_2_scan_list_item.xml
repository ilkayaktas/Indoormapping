<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 <LinearLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical" >
     
   <LinearLayout
       android:id="@+id/topHorizontalView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

       <Button
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_weight="0.10"
           android:text="Button"
           android:textSize="12sp" />
       
       <LinearLayout
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_weight="0.90"
		   android:orientation="vertical" >
		   
           <LinearLayout
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
   
		       <TextView
		           android:id="@+id/gHeader"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.45"
		           android:text="googleBeacon"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp"
		           android:textStyle="bold" />
		
		       <TextView
		           android:id="@+id/iHeader"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.45"
		           android:text="iBeacon"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp"
		           android:textStyle="bold" />

		   </LinearLayout>
           
           <LinearLayout
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
   
		       <TextView
		           android:id="@+id/gUUID"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.45"
		           android:text="gUUID"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="10sp" />
		
		       <TextView
		           android:id="@+id/iUUID"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.45"
		           android:text="iUUID"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="10sp" />

		   </LinearLayout>
		       	       
	    </LinearLayout>
    
   </LinearLayout>
   
   <LinearLayout
       android:id="@+id/MainHorizontalView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >
   
	   <LinearLayout
	       android:id="@+id/gMainVerticalView"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_weight="0.60"
	       android:orientation="vertical" >
	       
		   <LinearLayout
		       android:id="@+id/g1HorizontalView"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
		   
		       <TextView
		           android:id="@+id/gSignal"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.15"
		           android:text="gRssi"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gMacScan"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gMacScan"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gBattery"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gBatt"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		    </LinearLayout>
		    
		    <LinearLayout
		       android:id="@+id/g2HorizontalView"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
		   
		       <TextView
		           android:id="@+id/gNumscan"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.15"
		           android:text="gNumScan"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gTxpower"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gTxPower"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gTemp"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gTemp"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		       		
		    </LinearLayout>

		    <LinearLayout
		       android:id="@+id/g2HorizontalView"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
		   
		       <TextView
		           android:id="@+id/gRegTime"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.15"
		           android:text="gRegTime"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gSlowTime"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gSlowTime"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/gFastTime"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="gFastTime"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		       		
		    </LinearLayout>
		    	    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/iMainVerticalView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.40"
	        android:orientation="vertical" >
	       
		   <LinearLayout
		       android:id="@+id/i1HorizontalView"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
		   
		       <TextView
		           android:id="@+id/iSignal"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.15"
		           android:text="iRssi"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
				
		    </LinearLayout>
		    
		    <LinearLayout
		       android:id="@+id/i2HorizontalView"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
		   
		       <TextView
		           android:id="@+id/subid"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="subId"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		       <TextView
		           android:id="@+id/time"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="0.27"
		           android:text="time"
		           android:textAppearance="?android:attr/textAppearanceLarge"
		           android:textSize="12sp" />
		
		    </LinearLayout>
	    
	    </LinearLayout>
	   
       
	  </LinearLayout>
	    
	</LinearLayout>
      
  </LinearLayout>
